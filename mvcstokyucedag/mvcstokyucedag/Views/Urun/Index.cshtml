@using mvcstokyucedag.Models.entity
@model List<tblurunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Mainlayout.cshtml";
}



<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>GÜNCELLE</th>
            <th>SİL</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.urunID</th>
                <td>@urn.urunad</td>
                <td>@urn.urunmarka</td>
                <td>@urn.tblkategoriler.kategoriad</td>
                <td>@urn.urunfiyat</td>
                <td>@urn.urunstok</td>
                <td><a href="/Urun/urungetir/@urn.urunID" class="btn btn-success">GÜNCELLE</a></td>
                <td><a href="/Urun/sil/@urn.urunID" class="btn btn-danger">sil</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/urun/urunekle/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>


